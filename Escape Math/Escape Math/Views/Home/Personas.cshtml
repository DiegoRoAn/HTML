    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Personas</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nombre_cliente)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.apellidos_cliente)
        </th>
