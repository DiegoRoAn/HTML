            @Html.DisplayFor(modelItem => item.Nombre_cliente)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.apellidos_cliente)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Telefono)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.correo)
        </td>
        
